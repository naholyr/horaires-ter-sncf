<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="@drawable/quick_action_item_background"
	android:focusable="true" android:clickable="true" android:gravity="center"
	android:padding="3dip">
	<ImageView android:id="@+id/quick_action_icon"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_weight="1" android:src="@drawable/icon" />
	<TextView android:id="@+id/quick_action_label"
		android:gravity="center" android:layout_width="match_parent"
		android:textSize="10dip" android:layout_height="wrap_content"
		android:textColor="@android:color/secondary_text_light"
		android:singleLine="false" android:maxLines="3" android:minLines="3" />
</LinearLayout>