<?xml version="1.0" encoding="UTF-8"?>
<manifest android:versionCode="223" android:versionName="2.2.2"
	package="com.naholyr.android.horairessncf" xmlns:android="http://schemas.android.com/apk/res/android">
	<application android:allowBackup="true"
		android:allowClearUserData="true" android:icon="@drawable/icon"
		android:label="@string/app_name" android:name="MyApplication"
		android:theme="@android:style/Theme.Light">
		<activity android:label="@string/app_name" android:name=".activity.MainActivity"
			android:configChanges="orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.ProchainsDepartsActivity"
			android:configChanges="orientation">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.horairessncf.gare" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.PreferencesActivity" />
		<activity android:name=".activity.InitializeDataActivity"
			android:theme="@android:style/Theme.Dialog" android:configChanges="orientation" />
		<activity android:name=".activity.AboutActivity"
			android:theme="@android:style/Theme.Dialog" />
		<activity android:name=".activity.DetailsTrainActivity"
			android:theme="@android:style/Theme.Dialog" />
		<activity android:icon="@drawable/folder_favorites"
			android:label="@string/folder_favorites" android:name=".activity.FavoritesLiveFolder">
			<intent-filter>
				<action android:name="android.intent.action.CREATE_LIVE_FOLDER" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:icon="@drawable/folder_geolocation"
			android:label="@string/folder_geolocation" android:name=".activity.GeolocationLiveFolder">
			<intent-filter>
				<action android:name="android.intent.action.CREATE_LIVE_FOLDER" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<provider android:authorities="com.naholyr.android.horairessncf.garescontentprovider"
			android:name=".GaresContentProvider" />
	</application>
	<uses-sdk android:minSdkVersion="3" />
	<supports-screens android:smallScreens="true"
		android:normalScreens="true" android:largeScreens="true" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_GPS" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest>
