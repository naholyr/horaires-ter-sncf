<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/trains">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#99333333"
		android:text="Sélectionnez une gare pour consulter les départs"
		android:textSize="11dip" android:gravity="center" android:padding="5dip"
		android:visibility="gone" />
	<com.naholyr.android.horairessncf.view.ListeGaresView
		android:id="@+id/ListeGares" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:background="@android:color/transparent"
		android:layout_weight="1" android:cacheColorHint="@android:color/transparent" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:id="@+id/Toolbar">
		<Button android:id="@+id/ButtonMenu" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center"
			android:text="Plus d'options" android:drawableLeft="@android:drawable/ic_menu_more"
			android:textSize="16dip" android:background="@drawable/toolbar_button" />
	</LinearLayout>
</LinearLayout>
