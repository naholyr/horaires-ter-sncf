<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:gravity="top" android:orientation="vertical">
	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_weight="1">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:padding="10dip">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Votre TER à portée de main !" />

			<TextView android:text="L'auteur" style="@style/AboutTitle" />
			<ImageView style="@style/AboutDivider" />
			<TableLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TableRow>
					<TextView android:text="Auteur" android:layout_margin="5dip"
						android:textSize="15dip" />
					<TextView android:text="Nicolas Chambrier"
						android:layout_margin="5dip" android:textSize="15dip" />
				</TableRow>
				<TableRow>
					<TextView android:text="Email" android:layout_margin="5dip"
						android:textSize="15dip" />
					<TextView android:text="naholyr@gmail.com"
						android:layout_margin="5dip" android:autoLink="email"
						android:textSize="15dip" />
				</TableRow>
			</TableLayout>

			<TextView android:text="L'application" style="@style/AboutTitle" />
			<ImageView style="@style/AboutDivider" />
			<TextView android:id="@+id/AboutDialog_TextObjectifs"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:text="Rappel" style="@style/AboutTitle" />
			<ImageView style="@style/AboutDivider" />
			<TextView android:id="@+id/AboutDialog_TextRappel"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:text="Nouveautés" style="@style/AboutTitle" />
			<ImageView style="@style/AboutDivider" />
			<TextView android:id="@+id/AboutDialog_TextChangelog"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<TextView android:text="Historique des versions :"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<TextView android:text="@string/url_changelog"
				android:autoLink="web" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView android:text="Futures évolutions" style="@style/AboutTitle" />
			<ImageView style="@style/AboutDivider" />
			<TextView android:id="@+id/AboutDialog_TextEvolutions"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:text="Avertissement" style="@style/AboutTitle" />
			<ImageView style="@style/AboutDivider" />
			<TextView android:id="@+id/AboutDialog_TextAvertissements"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

		</LinearLayout>
	</ScrollView>
	<Button android:id="@+id/AboutDialog_ButtonClose"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center" android:layout_marginTop="5dip"
		android:textSize="16dip" android:text="Fermer" android:background="@drawable/toolbar_button" />
</LinearLayout>